#include <stdio.h>
#include <tchar.h>
#include <math.h>

void multiple2(int x) {
	if (x%2==0) {
		printf("C'est un multiple de 2.");
	}
}
void multiple3(int x) {
	if (x%3==0) {
        printf("C'est un multiple de 3.");
    }
}
int main(int argc, char* argv[])
{
	int x,y;
	printf("Entrez un nombre entier: %d");
	scanf("%d",&x);
	getch();
	multiple2(x);
	multiple3(x);
	system("PAUSE");
	return 0;
}
