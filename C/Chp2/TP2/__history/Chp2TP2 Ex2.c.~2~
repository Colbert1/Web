#include <stdio.h>

int _tmain(int argc, _TCHAR* argv[])
{        float nom[3][4],;
	int i,j, som;
	for(i=0;i<3;i++)
	{
		for(j=0;j<4;j++)
		{
			printf("Entrez la valeur ");
			scanf("%f",&nom[i][j]);
        }
	}
	for(i=0;i<3;i++)
	{
		for(j=0;j<4;j++)
		{
			som= som + nom[i][j];
			printf("%d+%d = %f\n",i,j,som);
		}
	}



	getch();
	return 0;
}
