#include <stdio.h>
#include <tchar.h>

typedef struct
{
	float X,Y;
}
point;
void saisie()

{
	int i;
	point pt[15];
	for (i = 0; i < 15; i++) {
		printf("X=");
		scanf ("%f",&pt[i].X);
		printf("Y=");
		scanf ("%f",&pt[i].Y);
	}
}
void affiche
{
	int i;
	point pt[15];
	for (i = 0; i < 15; i++) {
		printf("%c: X= %.2f \n",lettre,pt[i].X);
		printf("%c: Y= %.2f \n",lettre,pt[i].Y);
		lettre=lettre+1;
	}
}
void main()
{

	int i;
	points, point [15];
	saisie (point);
	affiche (point);


	getch();
	return 0;
}
