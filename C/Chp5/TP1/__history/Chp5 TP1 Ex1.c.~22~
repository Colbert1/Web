#include <stdlib.h>
#include <stdio.h>


int main(int argc, char *argv[])
{
	FILE *fichier;
	char caractere;
	int verif=0;

	fichier = fopen("./source.txt","r");

	if (fichier == NULL)
	{
		printf("Impossible d'ouvrir le fichier source.txt");
	}

	while (verif == 0 && fichier != NULL) {
		caractere = getc(fichier);
		printf("%c",caractere);
	}

fclose(fichier);

getch();
return 0;
}
